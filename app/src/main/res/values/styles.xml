<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Navigation_Button_Appearance" parent="Widget.Neumorph.Button">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">12dp</item>
        <item name="neumorph_shapeType">flat</item>
        <item name="neumorph_inset">13dp</item>
        <item name="neumorph_lightSource">leftTop</item>
        <item name="neumorph_shadowElevation">3dp</item>
        <item name="neumorph_shadowColorLight">#353535</item>
        <item name="neumorph_shadowColorDark">#0F0F10</item>
        <item name="neumorph_backgroundColor">@color/onyx_btn_black</item>
    </style>

    <style name="Action_button_Appearance" parent="Widget.Neumorph.Button">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">20dp</item>
        <item name="neumorph_shapeType">flat</item>
        <item name="neumorph_inset">13dp</item>
        <item name="neumorph_lightSource">leftTop</item>
        <item name="neumorph_shadowElevation">3dp</item>
        <item name="neumorph_shadowColorLight">#00353535</item>
        <item name="neumorph_shadowColorDark">#B00F0F10</item>
        <item name="neumorph_backgroundColor">#46464B</item>
    </style>

    <style name="Login_Page_Heading">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">31sp</item>
        <item name="android:textColor">@color/bluish_white</item>
    </style>

    <style name="EditText_Appearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/raisin_black_medium</item>
        <item name="android:textColorHint">@color/et_hint</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:background">@drawable/login_et_background</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>


    <style name="back_Button">
        <item name="android:text">Back</item>
        <item name="android:background">#00000000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFA7B3</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="rounded_image_view">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="custom_shape_imageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

    <style name="techStack_bg">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/lime_green</item>
        <item name="android:background">@drawable/project_item_cards_techstack_bg</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">6dp</item>
    </style>

    <style name="itemCards_tags">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#979797</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
</resources>