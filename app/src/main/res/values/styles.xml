<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button_Appearance" parent="Widget.Neumorph.Button">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">12dp</item>
        <item name="neumorph_shapeType">flat</item>
        <item name="neumorph_inset">13dp</item>
        <item name="neumorph_lightSource">leftTop</item>
        <item name="neumorph_shadowElevation">5dp</item>
        <item name="neumorph_shadowColorLight">#353535</item>
        <item name="neumorph_shadowColorDark">#0F0F10</item>
        <item name="neumorph_backgroundColor">@color/onyx_btn_black</item>
    </style>

    <style name="Login_Page_Heading">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">31sp</item>
        <item name="android:textColor">@color/bluish_white</item>
    </style>

    <style name="EditText_Appearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/raisin_black_medium</item>
        <item name="android:textColorHint">@color/et_hint</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:background">@drawable/login_et_background</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>


    <style name="cancel_Button">
        <item name="android:text">Cancel</item>
        <item name="android:background">#00000000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFA7B3</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>